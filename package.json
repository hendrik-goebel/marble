{
  "name": "marbleous-build",
  "version": "1.0.0",
  "description": "Node.js on Docker",
  "author": "First Last <first.last@example.com>",
  "main": "server.js",
  "watch": {
    "build-js": {
      "patterns": [
        "src/js/**"
      ],
      "extensions": "js",
      "quiet": false
    },
    "build-custom-scss": {
      "patterns": [
        "src/sass/**"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "build-html": {
      "patterns": [
        "src/html/**"
      ],
      "extensions": "html",
      "quiet": false
    }
  },
  "scripts": {
    "webpack": "webpack",
    "watch": "npm-watch",
    "lint": "eslint src/js/*.js",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "onchange \"src/**/*.js\" -- npm run lint --silent",
    "build-custom-scss": "sass src/sass/style.scss public/css/style.css",
    "build-scss": "npm run build-scss",
    "build-js": "webpack",
    "build-html": "node build.js",
    "build": " npm run build-scss && npm run build-js && npm run build-html",
    "serve": "node server.js",
    "start": "node server.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.2",
    "createjs": "^1.0.1",
    "sass": "^1.35.1",
    "tone": "^14.7.77",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "npm-watch": "^0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hg2000/marble.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hg2000/marble/issues"
  },
  "homepage": "https://github.com/hg2000/marble#readme"
}
